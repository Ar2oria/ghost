<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" name="Name">
    <properties>
        <property name="group">cc.w0rm</property>
        <property name="project">ghost</property>
        <property name="invLogHome">/log/apps</property>
        <property name="logHome">${invLogHome}/${group}/${project}</property>
    </properties>

    <Appenders>

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p] [%X{request_id}] [%t] %c{2.} - %m%n%ex"/>
        </Console>

        <RollingFile name="invokeAppender" fileName="${invLogHome}/${project}-invoke.log"
                     filePattern="${logHome}/${project}-invoke.log.%d{yyyy-MM-dd}">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} [%level] ${group}/${project} -%X{filter} &lt;%t|%C{1.}.%M(%L)&gt;
                    -%X{request_id} %m%n%ex
                </Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="${logHome}" maxDepth="1">
                    <IfFileName glob="${project}-invoke.log.*"/>
                    <IfLastModified age="7d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>


        <RollingFile name="warnAppender" fileName="${logHome}/${project}-warn.log"
                     filePattern="${logHome}/${project}-warn.log.%d{yyyy-MM-dd}">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} [%level] ${group}/${project} -%X{filter} &lt;%t|%C{1.}.%M(%L)&gt;
                    -%X{request_id} %m%n%ex
                </Pattern>
            </PatternLayout>
            <Filters>
                <ThresholdFilter level="error" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="warn" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="${logHome}" maxDepth="1">
                    <IfFileName glob="${project}-warn.log.*"/>
                    <IfLastModified age="7d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>

        <RollingFile name="errorAppender" fileName="${logHome}/${project}-error.log"
                     filePattern="${logHome}/${project}-error.log.%d{yyyy-MM-dd}">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} [%level] ${group}/${project} -%X{filter} &lt;%t|%C{1.}.%M(%L)&gt;
                    -%X{request_id} %m%n%ex
                </Pattern>
            </PatternLayout>
            <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="${logHome}" maxDepth="1">
                    <IfFileName glob="${project}-error.log.*"/>
                    <IfLastModified age="7d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>

        <RollingFile name="druidSqlAppender" fileName="${logHome}/${project}-sql.log"
                     filePattern="${logHome}/${project}-sql.log.%d{yyyy-MM-dd}">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} [%level] ${group}/${project} -%X{filter} &lt;%t|%C{1.}.%M(%L)&gt;
                    -%X{request_id} %m%n%ex
                </Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="${logHome}" maxDepth="1">
                    <IfFileName glob="${project}-sql.log.*"/>
                    <IfLastModified age="7d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>

    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="invokeAppender"/>
            <AppenderRef ref="warnAppender"/>
            <AppenderRef ref="errorAppender"/>
        </Root>

        <logger name="cc.w0rm.ghost.dao" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="druidSqlAppender"/>
            <AppenderRef ref="invokeAppender"/>
        </logger>
    </Loggers>
</Configuration>